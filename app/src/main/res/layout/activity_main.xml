<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/california"
            android:id="@+id/imageViewA2" />

        <TextView
            android:text="Rate My Images"
            android:id="@+id/textViewA2"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBarA2"
            android:stepSize="0.1"
            android:isIndicator="false"
            android:soundEffectsEnabled="true"
            android:layout_gravity="bottom|center"
            android:paddingBottom="10dp"
            android:foregroundTintMode="src_atop"
            android:progressTint="@color/colorAccent"
            android:progressTintMode="src_atop"
            android:secondaryProgressTint="@color/colorPrimary"
            android:secondaryProgressTintMode="src_atop"
            android:progressBackgroundTint="@color/white"
            />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:text="Check Selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewA23"
                android:textSize="18sp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary" />

            <CheckBox
                android:text="Check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:checked="true" />

            <CheckBox
                android:text="Cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox3" />

            <TextView
                android:text="Radio Selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textSize="18sp" />

            <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:enabled="true"
                android:checked="true" />

            <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2" />

            <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3" />

            <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4" />

            <TextView
                android:text="Added Random Components"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewA25"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextEmail"
                android:hint="Write your Email"
                android:text="Write Your E-mail"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextPassword"
                android:hint="Write Your Password"
                android:textColor="?attr/colorButtonNormal" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datePickerA2"
                android:clickable="true"
                android:datePickerMode="spinner" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="@style/AppThemeA2" />

            <Button
                android:text="Send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:elevation="9dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="@color/colorPrimary" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
